<?xml version="1.0" encoding="utf-8"?>
<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/day_details"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="1"
    android:stretchColumns="1" >
     
    <TableRow
        android:layout_weight="1">
	    <TextView
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="18sp"
	    	android:text="@string/day_morning_type" />
	    
	    <Spinner 
	        android:id="@+id/day_type"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:prompt="@string/period_checkin_prompt_day_type" />
    </TableRow>
    
    <TableRow
        android:layout_weight="1">
	    <TextView
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="18sp"
	    	android:text="@string/day_afternoon_type" />
	    
	    <Spinner 
	        android:id="@+id/day_type"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:prompt="@string/period_checkin_prompt_day_type" />
    </TableRow>
    
    <TableRow
        android:layout_weight="1">
	    <TextView
			android:id="@+id/txt_day_work_time"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="18sp"
	    	android:text="@string/day_work_time" />
	    
	    <TextView
			android:id="@+id/day_work_time"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="18sp" />
    </TableRow>
    
    <TableRow
        android:layout_weight="1">
	    <Button
			android:id="@+id/btn_day_extra_time"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
    		android:textSize="18sp"
	    	android:text="@string/day_extra_time"
	    	android:onClick="promptEditExtraTime" />
	    
	    <TextView
			android:id="@+id/day_extra_time"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="18sp" />
    </TableRow>
    
    <TableRow
        android:layout_weight="1">
	    <TextView
			android:id="@+id/txt_day_lost_time"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="18sp"
	    	android:text="@string/day_lost_time" />
	    
	    <TextView
			android:id="@+id/day_lost_time"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="18sp" />
    </TableRow>
    
    <TableRow
        android:layout_weight="2">
	    <Button
			android:id="@+id/btn_day_note"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="18sp"
	    	android:text="@string/day_note"
	    	android:onClick="promptEditNote" />
	    
	    <EditText
			android:id="@+id/day_note"
			android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:editable="false"
	    	android:textSize="18sp"
	    	android:cursorVisible="false"
	    	android:gravity="top" />
    </TableRow>
</TableLayout>
