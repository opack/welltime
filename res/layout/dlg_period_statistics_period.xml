<ScrollView>
	<TableLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:shrinkColumns="1"
	    android:stretchColumns="1" >
	    
	     <TableRow
	        android:layout_weight="1">
	        <TextView
	            android:id="@+id/txt_period_statistics"
	            android:layout_span="2"
				android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:gravity="center"
		    	android:textStyle="bold"
		    	android:textSize="20sp"
		    	android:textColor="@color/light_blue" />
	    </TableRow>
	    
	    <TableRow
	        android:layout_weight="1">
	        <TextView
				android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginRight="5dp"
		    	android:textSize="18sp"
		    	android:textColor="@android:color/white"
		    	android:text="@string/total_worked_days" />
	        
	        <TextView
				android:id="@+id/txt_total_worked_days"
				android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:paddingLeft="2dp"
		    	android:textColor="@android:color/white"
		    	android:textSize="18sp" />
	    </TableRow>
	    
	    <TableRow
	        android:layout_weight="1">
	        <TextView
				android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginRight="5dp"
		    	android:textColor="@android:color/white"
		    	android:textSize="18sp"
		    	android:text="@string/total_worked_time" />
	        
	        <TextView
				android:id="@+id/txt_total_worked_time"
				android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:paddingLeft="2dp"
		    	android:textColor="@android:color/white"
		    	android:textSize="18sp" />
	    </TableRow>
	    
	    <TableRow
	        android:layout_weight="1">
		    <TextView
				android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginRight="5dp"
		    	android:textColor="@android:color/white"
		    	android:textSize="18sp"
		    	android:text="@string/total_lost_time" />
	        
	        <TextView
				android:id="@+id/txt_total_lost_time"
				android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:textColor="@android:color/white"
		    	android:paddingLeft="2dp"
		    	android:textSize="18sp" />
	    </TableRow>
	    
	    <TableRow
	        android:layout_weight="1">
	        
	        <TextView
				android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginRight="5dp"
		    	android:textColor="@android:color/white"
		    	android:textSize="18sp"
		    	android:text="@string/mean_day_work_time" />
	        
	        <TextView
				android:id="@+id/txt_mean_day_work_time"
				android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:paddingLeft="2dp"
		    	android:textColor="@android:color/white"
		    	android:textSize="18sp" />
	    </TableRow>
	    
	    <!-- On occupe l'espace restant avec du vide -->
	    <TableRow android:layout_weight="4" />
	    
	</TableLayout>
</ScrollView>